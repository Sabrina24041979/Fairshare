{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <h1>Group index</h1>

    <p>{{ app.user ? app.user.email : ''}}</p>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Member</th>
                <th>Ticket</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ group.member }}</td>
                <td>{{ group.ticket }}</td>
                <td>
                    <a href="{{ path('app_group_show', {'id': group.id}) }}">show</a>
                    <a href="{{ path('app_group_edit', {'id': group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
        

    <a href="{{ path('app_group_new') }}">Create new</a>
{% endblock %}
